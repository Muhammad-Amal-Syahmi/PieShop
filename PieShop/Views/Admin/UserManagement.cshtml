@using Microsoft.AspNetCore.Identity
@using PieShop.DataAccess.Auth
@model IEnumerable<ApplicationUser>

<h2>User management</h2>
<div class="row">
    <div class="col-auto mr-auto"></div>
    <div class="col-auto"><a class="btn btn-primary mb-2" asp-action="AddUser">Add new user</a></div>
</div>
@if (!Model.Any())
{
    <tr><td colspan="3" class="text-center">No User Accounts</td></tr>
}
else
{
    <div class="card shadow">
        <div class="table-responsive">
            <table class="table table-hover text-nowrap">
                <tr>
                    <th>User ID</th>
                    <th>User name</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
                @foreach (ApplicationUser user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>
                            <form asp-action="DeleteUser" asp-route-userId="@user.Id" method="post">
                                <a class="btn btn-sm btn-warning" asp-action="EditUser" asp-route-id="@user.Id">Edit</a>
                                <button type="submit" onclick="return confirm('Are you sure you want to delete this user?');" class="btn btn-sm btn-danger">
                                    Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>


}

