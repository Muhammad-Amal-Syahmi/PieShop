@model HomeViewModel


<h2>@Model.Title</h2>

<div class="container">
    @foreach (var pie in Model.Pie)
    {

        <div class="col-md-4">
            <a asp-controller="Home" asp-action="Details" asp-route-id="@pie.Id">
                <div class="thumbnail row-margin-top">
                    <img src="@pie.ImageThumbnailUrl" alt="" />

                    <div class="caption">
                        <h3 class="pull-right">@pie.Price.ToString("c")</h3>
                        <h3>
                            @pie.Name
                        </h3>
                        <p>@pie.ShortDescription</p>
                    </div>
                </div>
            </a>
        </div>
    }
</div>

