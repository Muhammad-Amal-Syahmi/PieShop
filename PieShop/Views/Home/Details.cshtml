@model Pie

<h2><strong>@Model.Name</strong></h2>
<br />

<div class="thumbnail">
    <img alt="@Model.Name" width="70%" src="@Model.ImageUrl" />
    <div class="caption">
        <h3 class="pull-right"><strong>@Model.Price.ToString("c")</strong></h3>
        <h3>
            @Model.Name
        </h3>
        <br />
        <h4>@Model.ShortDescription</h4>
        <h4>@Model.LongDescription</h4>
    </div>
</div>