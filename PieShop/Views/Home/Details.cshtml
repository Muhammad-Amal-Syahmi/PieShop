@model Pie

<h2>@Model.Name</h2>

<div class="thumbnail">
    <img alt="@Model.Name" src="@Model.ImageUrl" />
    <div class="caption">
        <h3 class="pull-right">@Model.Price.ToString("c")</h3>
        <h3>
            @Model.Name
        </h3>
        <h4>@Model.ShortDescription</h4>
        <h4>@Model.LongDescription</h4>
    </div>
</div>